{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "defexception",
    "defprotocol",
    "defstruct",
    "def.+(.+\\\\.+).+do",
    "^\\s+use\\s+"
  ],

  "custom_stop_words": [],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "minimum_coverage": 90,
    "floor_coverage": true
  },

  "skip_files": [
    "test",
    "priv",
    "assets",
    "lib/food_favor_web/application.ex",
    "lib/food_favor_web/application.ex",
    "lib/food_favor_web/release.ex",
    "lib/food_favor_web/telemetry.ex",
    "lib/food_favor_web/components/core_components.ex"
  ],

  "terminal_options": {
    "file_column_width": 40
  }
}
